'use client';

import type { FC } from 'react';
import { useEffect, useMemo, useState } from 'react';

type SquareValue = 'X' | 'O' | null;

const WINNING_LINES: Array<[number, number, number]> = [
  [0, 1, 2],
  [3, 4, 5],
  [6, 7, 8],
  [0, 3, 6],
  [1, 4, 7],
  [2, 5, 8],
  [0, 4, 8],
  [2, 4, 6],
];

const createInitialBoard = (): SquareValue[] => Array(9).fill(null);

type Difficulty = 'EASY' | 'MEDIUM' | 'HARD' | 'EXPERT';

const getAvailableMoves = (squares: SquareValue[]) =>
  squares.map((v, i) => (v === null ? i : -1)).filter((i) => i !== -1);

const tryMoveWinner = (squares: SquareValue[], idx: number, val: 'X' | 'O') => {
  const next = squares.slice();
  next[idx] = val;
  return calculateWinner(next);
};

const scoreTerminal = (result: SquareValue | 'Draw' | null) => {
  if (result === 'O') return 1;
  if (result === 'X') return -1;
  if (result === 'Draw') return 0;
  return null;
};

const minimax = (
  board: SquareValue[],
  maximizing: boolean, // true => 'O' (AI), false => 'X' (human)
): { score: number; move: number | null } => {
  const terminal = calculateWinner(board);
  const terminalScore = scoreTerminal(terminal);
  if (terminalScore !== null) return { score: terminalScore, move: null };

  const moves = getAvailableMoves(board);
  if (maximizing) {
    let best = { score: -Infinity, move: moves[0] ?? null };
    for (const m of moves) {
      const next = board.slice();
      next[m] = 'O';
      const res = minimax(next, false);
      if (res.score > best.score) best = { score: res.score, move: m };
    }
    return best;
  } else {
    let best = { score: Infinity, move: moves[0] ?? null };
    for (const m of moves) {
      const next = board.slice();
      next[m] = 'X';
      const res = minimax(next, true);
      if (res.score < best.score) best = { score: res.score, move: m };
    }
    return best;
  }
};

interface Props { difficulty?: Difficulty }

const calculateWinner = (squares: SquareValue[]): SquareValue | 'Draw' | null => {
  for (const [a, b, c] of WINNING_LINES) {
    if (squares[a] && squares[a] === squares[b] && squares[a] === squares[c]) {
      return squares[a];
    }
  }

  return squares.every((square) => square !== null) ? 'Draw' : null;
};

// --- AI helpers ---
type Difficulty = 'OFF' | 'EASY' | 'MEDIUM' | 'HARD' | 'EXPERT';

const getAvailableMoves = (s: SquareValue[]) =>
  s.map((v, i) => (v === null ? i : -1)).filter((i) => i !== -1);

const tryMoveWinner = (s: SquareValue[], idx: number, val: 'X' | 'O') => {
  const next = s.slice();
  next[idx] = val;
  return calculateWinner(next);
};

const scoreTerminal = (result: SquareValue | 'Draw' | null) => {
  if (result === 'O') return 1;
  if (result === 'X') return -1;
  if (result === 'Draw') return 0;
  return null;
};

const minimax = (
  board: SquareValue[],
  maximizing: boolean,
): { score: number; move: number | null } => {
  const terminal = calculateWinner(board);
  const terminalScore = scoreTerminal(terminal);
  if (terminalScore !== null) return { score: terminalScore, move: null };

  const moves = getAvailableMoves(board);
  if (maximizing) {
    let best = { score: -Infinity, move: moves[0] ?? null };
    for (const m of moves) {
      const next = board.slice();
      next[m] = 'O';
      const res = minimax(next, false);
      if (res.score > best.score) best = { score: res.score, move: m };
    }
    return best;
  } else {
    let best = { score: Infinity, move: moves[0] ?? null };
    for (const m of moves) {
      const next = board.slice();
      next[m] = 'X';
      const res = minimax(next, true);
      if (res.score < best.score) best = { score: res.score, move: m };
    }
    return best;
  }
};

const TicTacToe: FC<Props> = ({ difficulty = 'MEDIUM' }) => {
  const [board, setBoard] = useState<SquareValue[]>(createInitialBoard);
  const [isXNext, setIsXNext] = useState(true);
  // Tracks who should start the NEXT game; flips after every completed game
  const [starterIsX, setStarterIsX] = useState(true);
  const [scores, setScores] = useState({ x: 0, o: 0, draws: 0 });
  const [hasRecordedResult, setHasRecordedResult] = useState(false);
  const [aiThinking, setAiThinking] = useState(false);
  const [botDifficulty, setBotDifficulty] = useState<Difficulty>('OFF');
  const [aiThinking, setAiThinking] = useState(false);

  const winner = useMemo(() => calculateWinner(board), [board]);

  useEffect(() => {
    if (!winner || hasRecordedResult) {
      return;
    }

    setScores((previousScores) => {
      if (winner === 'X') {
        return { ...previousScores, x: previousScores.x + 1 };
      }
      if (winner === 'O') {
        return { ...previousScores, o: previousScores.o + 1 };
      }
      return { ...previousScores, draws: previousScores.draws + 1 };
    });

    // Mark that we've recorded this game result, and flip next game's starter
    setHasRecordedResult(true);
    setStarterIsX((prev) => !prev);
  }, [winner, hasRecordedResult]);

  const handleClick = (index: number) => {
    // Player is always 'X'. Disable during AI move and after game.
    if (aiThinking || winner || !isXNext || board[index]) {
      return;
    }

    setBoard((previousBoard) => {
      const nextBoard = [...previousBoard];
      nextBoard[index] = 'X';
      return nextBoard;
    });
    setIsXNext(false);
  };

  const handleReset = () => {
    setBoard(createInitialBoard());
    // Use the toggled starter for the next game
    setIsXNext(starterIsX);
    setHasRecordedResult(false);
  };

  // AI turn: triggers whenever it's O's turn and game not over
  useEffect(() => {
    if (winner) return;
    if (isXNext) return; // human's turn
    if (aiThinking) return;

    const available = getAvailableMoves(board);
    if (available.length === 0) return;

    const randomMove = () => available[Math.floor(Math.random() * available.length)];

    const decideMove = (): number => {
      if (difficulty === 'EASY') {
        // 15% chance to block immediate X win, else random
        if (Math.random() < 0.15) {
          const block = available.find((m) => tryMoveWinner(board, m, 'X') === 'X');
          return block ?? randomMove();
        }
        return randomMove();
      }
      if (difficulty === 'MEDIUM') {
        // Win now if possible
        const winNow = available.find((m) => tryMoveWinner(board, m, 'O') === 'O');
        if (winNow !== undefined) return winNow;
        // Block immediate X win
        const block = available.find((m) => tryMoveWinner(board, m, 'X') === 'X');
        return block ?? randomMove();
      }
      // HARD/EXPERT use Minimax, HARD with mistake chance
      const best = minimax(board, true).move;
      if (best == null) return randomMove();
      if (difficulty === 'HARD' && Math.random() < 0.15) {
        const others = available.filter((m) => m !== best);
        return others.length ? others[Math.floor(Math.random() * others.length)] : best;
      }
      return best;
    };

    setAiThinking(true);
    const delay = difficulty === 'EXPERT' ? 0 : 120;
    const t = setTimeout(() => {
      const move = decideMove();
      setBoard((prev) => {
        const next = prev.slice();
        next[move] = 'O';
        return next;
      });
      setIsXNext(true);
      setAiThinking(false);
    }, delay);
    return () => clearTimeout(t);
  }, [board, isXNext, aiThinking, winner, difficulty]);

  const statusMessage = useMemo(() => {
    if (!winner) {
      return `Next player: ${isXNext ? 'X' : 'O'}`;
    }
    return winner === 'Draw' ? "It's a draw!" : `Winner: ${winner}`;
  }, [winner, isXNext]);

  return (
    <div className="flex w-full max-w-lg flex-col items-center justify-center gap-6 text-white">
      <h1 className="text-4xl font-bold">Tic Tac Toe</h1>
      <div
        className="grid w-full grid-cols-3 gap-3 rounded-lg bg-gray-800/60 p-4 text-center"
        aria-live="polite"
      >
        <div className="flex flex-col items-center gap-1">
          <span className="text-sm font-semibold uppercase tracking-wide text-gray-300">X Wins</span>
          <span className="text-2xl font-bold text-blue-400">{scores.x}</span>
        </div>
        <div className="flex flex-col items-center gap-1">
          <span className="text-sm font-semibold uppercase tracking-wide text-gray-300">O Wins</span>
          <span className="text-2xl font-bold text-rose-400">{scores.o}</span>
        </div>
        <div className="flex flex-col items-center gap-1">
          <span className="text-sm font-semibold uppercase tracking-wide text-gray-300">Draws</span>
          <span className="text-2xl font-bold text-amber-300">{scores.draws}</span>
        </div>
      </div>
      <p className="text-xl font-semibold" aria-live="polite">
        {statusMessage}
      </p>
      <div className="grid grid-cols-3 gap-3">
        {board.map((value, index) => {
          const colorClass = value === 'X' ? 'text-blue-400' : value === 'O' ? 'text-rose-400' : 'text-white';
          return (
            <button
              key={index}
              type="button"
              className={`flex h-24 w-24 items-center justify-center rounded-lg border-2 border-gray-400 text-4xl font-bold transition hover:border-indigo-400 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-400 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900 ${colorClass}`}
              onClick={() => handleClick(index)}
              aria-label={value ? `Cell ${index + 1} containing ${value}` : `Select cell ${index + 1}`}
            >
              {value}
            </button>
          );
        })}
      </div>
      <button
        type="button"
        className="rounded-md bg-indigo-600 px-6 py-2 font-semibold text-white transition hover:bg-indigo-700 focus:outline-none focus-visible:ring-2 focus-visible:ring-indigo-400 focus-visible:ring-offset-2 focus-visible:ring-offset-gray-900"
        onClick={handleReset}
      >
        Reset Game
      </button>
    </div>
  );
};

export default TicTacToe;
